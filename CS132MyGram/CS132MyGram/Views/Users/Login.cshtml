<form asp-route="LogAUser" method="post">
    <table>
        <tbody>
            <tr>
                <td>
                    <label for="UserName">User</label>
                </td>
                <td>
                    <input name="UserName" type="text" id="UserName" placeholder="Type your user name here" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Password">Password</label>
                </td>
                <td>
                    <input name="Password" type="Password" id="Password" placeholder="Type your Password here" />
                </td>
            </tr>
            <tr>
                <td>
                    <button>Log In</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>